<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css">
  <title>Vittles | Add Item</title>
</head>
<body>
  <%- include('partials/header') %>
  <div class="container">
    <h1>Add Item</h1>
    <form class="form-horizontal" role="form" method="post" action="/newItem">
      <div class="form-group">
        <label class="col-lg-3 control-label">Choose Restaurant:</label>
        <div class="col-lg-8">
          <select class="myselect" name="addrestaurant" style="width: 50%" >
            <option></option>
            <%restaurants.forEach(function(restaurant) {%>
              <option id="AL"><%= restaurant.name%></option>
            <%}); %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Category:</label>
        <div class="col-lg-8 dropdown">
          <select class="myselect" name="addtype" style="width: 50%">
            <option></option>
            <%types.forEach(function(types) {%>
              <option id="AL"><%= types.type%></option>
            <%}); %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Add Dish:</label>
        <div class="col-lg-8">
          <input class="form-control" type="text" placeholder="Name" name="adddishname">
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Add Description:</label>
        <div class="col-lg-8">
          <textarea class="form-control" rows="3" type="text" placeholder="Decription" name="adddishdesc"></textarea>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label">Add Image:</label>
        <div class="col-lg-8">
          <input type="file" name="adddishimage" accept="image/gif, image/jpeg, image/png">
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-3 control-label"></label>
        <div class="col-md-8 buttons">
          <input type="submit" class="btn btn-primary" value="Add Item" id="additem"required>
          <span></span>
          <input type="reset" class="btn btn-default" value="Cancel">
        </div>
      </div>
    </form>
  </div>
</body>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<script src="/js/select2.min.js"></script>
</html>